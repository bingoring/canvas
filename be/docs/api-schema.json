{
  "openapi": "3.0.0",
  "info": {
    "title": "Canvas AI Companion API",
    "version": "1.0.0",
    "description": "학교 생활 AI 컴패니언 플랫폼 API"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/chat/send": {
      "post": {
        "summary": "AI와 대화하기",
        "tags": ["Chat"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["message"],
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "사용자 메시지"
                  },
                  "sessionId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "채팅 세션 ID"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["general", "image_creation", "school_info"],
                    "default": "general"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AI 응답",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/chat/sessions": {
      "get": {
        "summary": "채팅 세션 목록",
        "tags": ["Chat"],
        "responses": {
          "200": {
            "description": "세션 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/ChatSession"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/image/generate": {
      "post": {
        "summary": "AI 이미지 생성",
        "tags": ["Image"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["prompt"],
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "이미지 생성 프롬프트"
                  },
                  "style": {
                    "type": "string",
                    "enum": ["cartoon", "realistic", "anime", "meme"],
                    "default": "cartoon"
                  },
                  "category": {
                    "type": "string",
                    "enum": ["emoticon", "meme", "sticker"],
                    "default": "emoticon"
                  },
                  "isPublic": {
                    "type": "boolean",
                    "default": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "생성된 이미지",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ImageResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/image/gallery": {
      "get": {
        "summary": "이미지 갤러리",
        "tags": ["Image"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 20}
          },
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["emoticon", "meme", "sticker"]
            }
          },
          {
            "name": "style",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["cartoon", "realistic", "anime", "meme"]
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "갤러리 목록",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GalleryResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/content/{contentId}/like": {
      "post": {
        "summary": "콘텐츠 좋아요",
        "tags": ["Content"],
        "parameters": [
          {
            "name": "contentId",
            "in": "path",
            "required": true,
            "schema": {"type": "string", "format": "uuid"}
          }
        ],
        "responses": {
          "200": {
            "description": "좋아요 결과",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "data": {
                      "type": "object",
                      "properties": {
                        "liked": {"type": "boolean"},
                        "totalLikes": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/school/ask": {
      "post": {
        "summary": "학교 정보 질의응답",
        "tags": ["School"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["question"],
                "properties": {
                  "question": {
                    "type": "string",
                    "description": "질문 내용"
                  },
                  "context": {
                    "type": "string",
                    "description": "질문 맥락"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "답변 결과",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SchoolInfoResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/profile": {
      "get": {
        "summary": "사용자 프로필",
        "tags": ["User"],
        "responses": {
          "200": {
            "description": "프로필 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ChatResponse": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "data": {
            "type": "object",
            "properties": {
              "response": {"type": "string"},
              "sessionId": {"type": "string", "format": "uuid"},
              "suggestions": {
                "type": "array",
                "items": {"type": "string"}
              },
              "agentType": {"type": "string"}
            }
          }
        }
      },
      "ChatSession": {
        "type": "object",
        "properties": {
          "sessionId": {"type": "string", "format": "uuid"},
          "type": {
            "type": "string",
            "enum": ["general", "image_creation", "school_info"]
          },
          "lastMessage": {"type": "string"},
          "createdAt": {"type": "string", "format": "date-time"},
          "lastActiveAt": {"type": "string", "format": "date-time"}
        }
      },
      "ImageResponse": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "data": {
            "type": "object",
            "properties": {
              "contentId": {"type": "string", "format": "uuid"},
              "imageUrl": {"type": "string", "format": "uri"},
              "thumbnailUrl": {"type": "string", "format": "uri"},
              "prompt": {"type": "string"},
              "style": {"type": "string"},
              "generatedAt": {"type": "string", "format": "date-time"},
              "variations": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        }
      },
      "GalleryResponse": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "data": {
            "type": "object",
            "properties": {
              "images": {
                "type": "array",
                "items": {"$ref": "#/components/schemas/ImageItem"}
              },
              "pagination": {"$ref": "#/components/schemas/Pagination"}
            }
          }
        }
      },
      "ImageItem": {
        "type": "object",
        "properties": {
          "contentId": {"type": "string", "format": "uuid"},
          "imageUrl": {"type": "string", "format": "uri"},
          "thumbnailUrl": {"type": "string", "format": "uri"},
          "title": {"type": "string"},
          "category": {"type": "string"},
          "style": {"type": "string"},
          "likes": {"type": "integer"},
          "uses": {"type": "integer"},
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "createdAt": {"type": "string", "format": "date-time"}
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "page": {"type": "integer"},
          "limit": {"type": "integer"},
          "total": {"type": "integer"},
          "pages": {"type": "integer"}
        }
      },
      "SchoolInfoResponse": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "data": {
            "type": "object",
            "properties": {
              "answer": {"type": "string"},
              "sources": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {"type": "string"},
                    "url": {"type": "string", "format": "uri"},
                    "relevance": {"type": "number"}
                  }
                }
              },
              "confidence": {"type": "number"},
              "relatedQuestions": {
                "type": "array",
                "items": {"type": "string"}
              },
              "lastUpdated": {"type": "string", "format": "date-time"}
            }
          }
        }
      },
      "UserProfileResponse": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "data": {
            "type": "object",
            "properties": {
              "userId": {"type": "string", "format": "uuid"},
              "email": {"type": "string", "format": "email"},
              "university": {"type": "string"},
              "major": {"type": "string"},
              "year": {"type": "integer"},
              "preferences": {
                "type": "object",
                "properties": {
                  "favoriteStyles": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "notifications": {"type": "boolean"}
                }
              },
              "statistics": {
                "type": "object",
                "properties": {
                  "contentCreated": {"type": "integer"},
                  "contentLiked": {"type": "integer"},
                  "totalViews": {"type": "integer"}
                }
              }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean", "example": false},
          "error": {
            "type": "object",
            "properties": {
              "code": {"type": "string"},
              "message": {"type": "string"},
              "details": {"type": "object"},
              "timestamp": {"type": "string", "format": "date-time"}
            }
          }
        }
      }
    }
  }
}