# Application Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3001

# AWS Configuration (Korea Region)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Bedrock Configuration
BEDROCK_TEXT_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_IMAGE_MODEL_ID=amazon.titan-image-generator-v1
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# Storage Configuration
AWS_S3_BUCKET=canvas-orchestration-storage
AWS_S3_REGION=ap-northeast-2

# OpenSearch Configuration (Vector DB)
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.ap-northeast-2.es.amazonaws.com
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_opensearch_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# MongoDB Configuration (Primary Database)
MONGODB_URI=mongodb://localhost:27017/canvas_orchestration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=canvas_orchestration
MONGODB_USERNAME=
MONGODB_PASSWORD=

# MongoDB Atlas (Production)
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/canvas_orchestration

# Plugin Configuration
PLUGIN_REGISTRY_PATH=./plugins-external
PLUGIN_AUTO_LOAD=true

# Cost Optimization
DEFAULT_BUDGET_LIMIT_MONTHLY=100.00
COST_OPTIMIZATION_STRATEGY=balanced

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
LOG_LEVEL=info