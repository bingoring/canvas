# Application Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3001

# Docker Configuration
DOCKER_TARGET=development

# AWS Configuration (Korea Region)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Bedrock Configuration
BEDROCK_TEXT_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_IMAGE_MODEL_ID=amazon.titan-image-generator-v1
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# Storage Configuration
AWS_S3_BUCKET=canvas-orchestration-storage
AWS_S3_REGION=ap-northeast-2

# OpenSearch Configuration (Vector DB)
OPENSEARCH_ENDPOINT=https://opensearch:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=OpenSearch123!
OPENSEARCH_PORT=9200

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# MongoDB Configuration (Primary Database)
MONGODB_URI=mongodb://admin:password@mongodb:27017/canvas_orchestration?authSource=admin
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=canvas_orchestration
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=password

# MongoDB Atlas (Production)
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/canvas_orchestration

# Plugin Configuration
PLUGIN_REGISTRY_PATH=./plugins-external
PLUGIN_AUTO_LOAD=true

# Cost Optimization
DEFAULT_BUDGET_LIMIT_MONTHLY=100.00
COST_OPTIMIZATION_STRATEGY=balanced

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=10

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=1000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000